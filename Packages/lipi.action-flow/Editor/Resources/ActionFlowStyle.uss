ActionGraphView {
    background-color: #212121;
}

.node-field{
    flex-direction:row
}

.node-field-label {
    width: 70;
    flex-grow: 0;
}


.node-field-input {
    flex-grow: 1;
   /* width: 100;*/
   min-width: 60;
}



