EditorNodeElement {
    padding: 2;
}
EditorActionNode #title {
    height: 22;
}

EditorActionNode #contents > #top > #input {
    padding-top: 2;
    padding-bottom: 2;
}

EditorActionNode #contents > #top > #output {
    padding-top: 2;
    padding-bottom: 2;
}


EditorActionNode .port {
    height: 20;
}

EditorActionNode EditorNodeElement .outputparm-field{
    width:16;
    padding-left:0;
    padding-right:0;

}

EditorActionNode EditorNodeElement .outputparm-field #type {
    margin-left:0;
    margin-right:0;
}

